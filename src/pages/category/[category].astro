---
import Layout from '../../layouts/Layout.astro';
import CategorySidebar from '../../components/CategorySidebar.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');

  // Get unique categories
  const categories = new Set<string>();
  allPosts.forEach(post => {
    if (post.data.category) {
      categories.add(post.data.category);
    }
  });

  // Create a page for each category with URL-safe slugs
  return Array.from(categories).map(category => {
    // Create URL-safe slug from category name (same logic as CategorySidebar)
    const categorySlug = category
      .toLowerCase()
      .replace(/\//g, '-')
      .replace(/\s+/g, '-')
      .replace(/[^\w\-가-힣]/g, '');

    return {
      params: { category: categorySlug },
      props: { category }, // Keep original name for display and filtering
    };
  });
}

const { category } = Astro.props;
const allPosts = await getCollection('posts');

// Filter posts by category
const posts = allPosts
  .filter(post => post.data.category === category)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout
  title={`${category} - Blog`}
  description={`Posts in ${category} category`}
>
  <div class="container">
    <!-- Category Header -->
    <section class="category-header">
      <div class="breadcrumb">
        <a href="/blog/">Home</a>
        <span class="separator">/</span>
        <span class="current">{category}</span>
      </div>
      <h1 class="category-title">{category}</h1>
      <p class="category-count">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</p>
    </section>

    <!-- Main Content with Sidebar -->
    <div class="content-with-sidebar">
      <!-- Sidebar (Desktop) -->
      <CategorySidebar />

      <!-- Posts Grid -->
      <section class="posts-section">
        {posts.length === 0 ? (
          <div class="empty-state">
            <p>No posts found in this category.</p>
            <a href="/blog/" class="back-link">← Back to all posts</a>
          </div>
        ) : (
          <div class="posts-grid">
            {posts.map((post) => (
              <article class="post-card">
                <a href={`/blog/posts/${post.slug}/`} class="card-link">
                  <div class="card-content">
                    <div class="card-meta">
                      <time datetime={post.data.date} class="card-date">
                        {new Date(post.data.date).toLocaleDateString('ko-KR', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric'
                        })}
                      </time>
                      <span class="category-badge">{post.data.category}</span>
                    </div>
                    <h3 class="card-title">{post.data.title}</h3>
                    {post.data.description && (
                      <p class="card-description">{post.data.description}</p>
                    )}
                    <div class="card-footer">
                      <span class="read-more">
                        Read more
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                      </span>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        )}
      </section>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-md);
  }

  /* Category Header */
  .category-header {
    margin-bottom: var(--space-2xl);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
  }

  .breadcrumb a {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb .separator {
    color: var(--color-text-tertiary);
  }

  .breadcrumb .current {
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .category-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 800;
    margin-bottom: var(--space-sm);
  }

  .category-count {
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  /* Content with Sidebar Layout */
  .content-with-sidebar {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }

  @media (max-width: 1024px) {
    .content-with-sidebar {
      grid-template-columns: 1fr;
    }
  }

  /* Posts Section */
  .posts-section {
    min-width: 0;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-2xl);
    color: var(--color-text-secondary);
  }

  .empty-state .back-link {
    display: inline-block;
    margin-top: var(--space-md);
    color: var(--color-accent-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .empty-state .back-link:hover {
    text-decoration: underline;
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Post Card - Same styles as index page */
  .post-card {
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    border-color: var(--color-accent-primary);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .card-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    height: 100%;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .card-date {
    font-size: 0.85rem;
    color: var(--color-text-tertiary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .category-badge {
    display: inline-block;
    padding: 2px var(--space-sm);
    background-color: var(--color-accent-light);
    color: var(--color-accent-primary);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-sm);
    text-transform: capitalize;
  }

  [data-theme="dark"] .category-badge {
    background-color: var(--color-accent-primary);
    color: var(--color-bg-primary);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    color: var(--color-text-primary);
    transition: color var(--transition-fast);
  }

  .post-card:hover .card-title {
    color: var(--color-accent-primary);
  }

  .card-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    margin-top: auto;
    padding-top: var(--space-md);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-accent-primary);
    font-weight: 600;
    font-size: 0.9rem;
    transition: gap var(--transition-fast);
  }

  .post-card:hover .read-more {
    gap: var(--space-md);
  }

  .read-more svg {
    width: 18px;
    height: 18px;
  }
</style>
