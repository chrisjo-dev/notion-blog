---
import Layout from '../../layouts/Layout.astro';
import CategorySidebar from '../../components/CategorySidebar.astro';
import { getCollection } from 'astro:content';

const POSTS_PER_PAGE = 20;

export async function getStaticPaths() {
  const allPostsRaw = await getCollection('posts');

  // Filter out category pages
  const allPosts = allPostsRaw
    .filter(post => {
      return post.data.category !== undefined && post.data.category !== null;
    })
    .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

  const totalPages = Math.ceil(allPosts.length / POSTS_PER_PAGE);

  return Array.from({ length: totalPages }, (_, i) => {
    const pageNum = i + 1;
    const start = i * POSTS_PER_PAGE;
    const end = start + POSTS_PER_PAGE;

    return {
      params: { page: String(pageNum) },
      props: {
        posts: allPosts.slice(start, end),
        currentPage: pageNum,
        totalPages,
        totalPosts: allPosts.length,
      },
    };
  });
}

const { posts, currentPage, totalPages, totalPosts } = Astro.props;
---

<Layout
  title={`Blog - Page ${currentPage}`}
  description="Welcome to my personal blog powered by Notion and GitHub Pages"
>
  <div class="container">
    <!-- Hero Section -->
    <section class="hero">
      <h1 class="hero-title">Chris's Cloud blog</h1>
      <p class="hero-description">Thoughts, stories and ideas.</p>
    </section>

    <!-- Main Content with Sidebar -->
    <div class="content-with-sidebar">
      <!-- Sidebar (Desktop) -->
      <CategorySidebar />

      <!-- Posts Grid -->
      <section class="posts-section">
      <div class="section-header">
        <h2>Latest Posts</h2>
        <p class="post-count">{totalPosts} {totalPosts === 1 ? 'post' : 'posts'}</p>
      </div>

      {posts.length === 0 ? (
        <div class="empty-state">
          <p>No posts yet. Check back soon!</p>
        </div>
      ) : (
        <div class="posts-grid">
          {posts.map((post) => (
            <article class="post-card">
              <a href={`/notion-blog/posts/${post.slug}/`} class="card-link">
                <div class="card-content">
                  <div class="card-meta">
                    <time datetime={post.data.date} class="card-date">
                      {new Date(post.data.date).toLocaleDateString('ko-KR', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                    {post.data.category && (
                      <span class="category-badge">{post.data.category}</span>
                    )}
                  </div>
                  <h3 class="card-title">{post.data.title}</h3>
                  {post.data.description && (
                    <p class="card-description">{post.data.description}</p>
                  )}
                  <div class="card-footer">
                    <span class="read-more">
                      Read more
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="pagination">
          <a
            href={currentPage > 1 ? (currentPage === 2 ? '/notion-blog/' : `/notion-blog/page/${currentPage - 1}/`) : '#'}
            class:list={['pagination-btn', { disabled: currentPage === 1 }]}
            aria-disabled={currentPage === 1}
          >
            Previous
          </a>
          <span class="page-info">Page {currentPage} of {totalPages}</span>
          <a
            href={currentPage < totalPages ? `/notion-blog/page/${currentPage + 1}/` : '#'}
            class:list={['pagination-btn', { disabled: currentPage === totalPages }]}
            aria-disabled={currentPage === totalPages}
          >
            Next
          </a>
        </div>
      )}
      </section>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-xl);
  }

  @media (max-width: 768px) {
    .container {
      padding: var(--space-xl) var(--space-md);
    }
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: var(--space-2xl) 0;
    margin-bottom: var(--space-2xl);
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    background: linear-gradient(135deg, var(--color-accent-primary), var(--color-accent-hover));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-md);
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Content with Sidebar Layout */
  .content-with-sidebar {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }

  @media (max-width: 1024px) {
    .content-with-sidebar {
      grid-template-columns: 1fr;
    }
  }

  /* Posts Section */
  .posts-section {
    margin-top: var(--space-2xl);
    min-width: 0; /* Prevent grid overflow */
  }

  @media (max-width: 1024px) {
    .posts-section {
      margin-top: 0;
    }
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-md);
    border-bottom: 2px solid var(--color-border);
  }

  .section-header h2 {
    font-size: 1.75rem;
    font-weight: 700;
  }

  .post-count {
    color: var(--color-text-tertiary);
    font-size: 0.9rem;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--space-2xl);
    color: var(--color-text-secondary);
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Post Card */
  .post-card {
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    border-color: var(--color-accent-primary);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    height: 100%;
  }

  .card-content {
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    height: 100%;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .card-date {
    font-size: 0.85rem;
    color: var(--color-text-tertiary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .category-badge {
    display: inline-block;
    padding: 2px var(--space-sm);
    background-color: var(--color-accent-light);
    color: var(--color-accent-primary);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-sm);
    text-transform: capitalize;
  }

  [data-theme="dark"] .category-badge {
    background-color: var(--color-accent-primary);
    color: var(--color-bg-primary);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    color: var(--color-text-primary);
    transition: color var(--transition-fast);
  }

  .post-card:hover .card-title {
    color: var(--color-accent-primary);
  }

  .card-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    margin-top: auto;
    padding-top: var(--space-md);
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-accent-primary);
    font-weight: 600;
    font-size: 0.9rem;
    transition: gap var(--transition-fast);
  }

  .post-card:hover .read-more {
    gap: var(--space-md);
  }

  .read-more svg {
    width: 18px;
    height: 18px;
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-lg);
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
  }

  .pagination-btn {
    padding: var(--space-sm) var(--space-lg);
    border: 1px solid var(--color-border);
    background-color: var(--color-bg-primary);
    color: var(--color-text-primary);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all var(--transition-fast);
    text-decoration: none;
    cursor: pointer;
  }

  .pagination-btn:hover:not(.disabled) {
    background-color: var(--color-accent-primary);
    color: white;
    border-color: var(--color-accent-primary);
  }

  .pagination-btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .page-info {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }
</style>
