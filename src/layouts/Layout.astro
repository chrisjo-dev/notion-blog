---
import Navigation from '../components/Navigation.astro';
import Search from '../components/Search.astro';
import { getCollection } from 'astro:content';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  article?: {
    publishedTime: string;
    modifiedTime: string;
    author: string;
  };
}

const { title, description = '', article } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL('/notion-blog/og-image.png', Astro.site);

// Get all posts for search
const allPosts = await getCollection('posts');
const postsData = allPosts.map(post => ({
  title: post.data.title,
  description: post.data.description || '',
  date: post.data.date,
  category: post.data.category || '',
  slug: post.slug,
}));
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/notion-blog/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:image" content={socialImageURL} />

    {article && (
      <>
        <meta property="article:published_time" content={article.publishedTime} />
        <meta property="article:modified_time" content={article.modifiedTime} />
        <meta property="article:author" content={article.author} />
      </>
    )}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    {description && <meta property="twitter:description" content={description} />}
    <meta property="twitter:image" content={socialImageURL} />

    <!-- JSON-LD Schema -->
    {article && (
      <script type="application/ld+json" set:html={JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'Article',
        headline: title,
        description: description,
        image: socialImageURL.toString(),
        datePublished: article.publishedTime,
        dateModified: article.modifiedTime,
        author: {
          '@type': 'Person',
          name: article.author
        }
      })} />
    )}
  </head>
  <body>
    <Navigation />
    <Search />
    <main class="main-content">
      <slot />
    </main>

    <!-- Inject posts data for search -->
    <script define:vars={{ postsData }}>
      window.allPosts = postsData;
    </script>
    <footer class="footer">
      <div class="footer-content">
        <p>&copy; {new Date().getFullYear()} Chris. All rights reserved.</p>
        <p class="footer-note">Powered by <a href="https://notion.so" target="_blank" rel="noopener noreferrer">Notion</a> & <a href="https://astro.build" target="_blank" rel="noopener noreferrer">Astro</a></p>
      </div>
    </footer>

    <!-- Bookmark metadata loader -->
    <script>
      // Fetch metadata using a link preview API
      async function loadBookmarkMetadata() {
        const bookmarks = document.querySelectorAll('.bookmark-card[data-url]');

        for (const bookmark of bookmarks) {
          const url = bookmark.getAttribute('data-url');
          if (!url) continue;

          try {
            // Use Microlink API for link preview
            const apiUrl = `https://api.microlink.io/?url=${encodeURIComponent(url)}`;
            const response = await fetch(apiUrl);

            if (response.ok) {
              const data = await response.json();

              if (data.status === 'success' && data.data) {
                const { title, description, image, logo } = data.data;

                // Update title
                const titleEl = bookmark.querySelector('.bookmark-title');
                if (titleEl && title) {
                  titleEl.textContent = title;
                }

                // Update description (limit to 200 characters)
                const descEl = bookmark.querySelector('.bookmark-description');
                if (descEl && description) {
                  const truncatedDesc = description.length > 200
                    ? description.substring(0, 200) + '...'
                    : description;
                  descEl.textContent = truncatedDesc;
                  descEl.classList.remove('loading');
                } else if (descEl) {
                  descEl.style.display = 'none';
                }

                // Update favicon if available
                const faviconEl = bookmark.querySelector('.bookmark-favicon');
                if (faviconEl && logo?.url) {
                  faviconEl.src = logo.url;
                }

                // Update image if available
                if (image?.url) {
                  const imageContainer = bookmark.querySelector('.bookmark-image');
                  const imageEl = bookmark.querySelector('.bookmark-image img');
                  if (imageContainer && imageEl) {
                    imageEl.src = image.url;
                    imageEl.alt = title || '';
                    imageContainer.style.display = 'flex';
                  }
                }
              }
            }
          } catch (error) {
            console.warn(`Failed to load bookmark metadata for ${url}:`, error);
            // Hide loading state
            const descEl = bookmark.querySelector('.bookmark-description');
            if (descEl) {
              descEl.style.display = 'none';
            }
          }
        }
      }

      // Load metadata when page is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', loadBookmarkMetadata);
      } else {
        loadBookmarkMetadata();
      }
    </script>
  </body>
</html>

<style>
  .main-content {
    min-height: calc(100vh - 64px - 120px); /* viewport - nav - footer */
  }

  .footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--space-xl) 0;
    margin-top: var(--space-2xl);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .footer-note {
    margin-top: var(--space-sm);
    font-size: 0.85rem;
  }

  .footer a {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .footer a:hover {
    text-decoration: underline;
  }
</style>
